<% @title = "#{@user.name}" %>
<div class="user-background">
	<div class="show-main">
		<div class="user-block">
			<table>
				<tr>
				<td><img src="<%= @user.image %>"></td>
				<td><h3><%= @user.name %></h3></td>
				</tr>
			</table>

		</div>
		<div class="my-garage" >


		</div>
		<div class="user-post">
			<h2> User posts </h2>
			<% @user_post.each do |up| %>
			<h3><%= link_to up.title, post_url(up) %></h3>
			<% end %>
		</div>

		<div class="user-post">
			<h2> User videos </h2>
			<% @user_video.each do |uv| %>
			<h3><%= link_to uv.title, video_url(uv) %></h3>
			<% end %>
		</div>
		<h2> </h2>
			<div class="ad-homeb">
     

	</div>
	
</div>
<%= render "layouts/footer"%>
