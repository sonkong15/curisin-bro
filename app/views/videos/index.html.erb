<div class="posts-h2">
	<h2>Explore Cars Bikes Trucks videos </h2>
</div>
<% if current_user %>
<div class="add-post">
<%= form_for @video, :multipart => true, :class => 'form-horizontal'  do |p| %>
<%= p.label :title, :class => "post-label" %>
<%= p.text_field :title %>
<div class="post-upload">
<%= p.label "link(opcenal)"%>
<%= p.text_field :link  %>
</div>
<%= p.label :tag_list, "Tags (separated by commas)", :class => "post-tag" %>
<%= p.text_field :tag_list, :class => ""  %>
<div id="youtube" class="post-upload">
<%= p.label :youtube_url, :style => "display: inline;" %>
<%= p.text_field :youtube %>
</div>
<div id="vimeo">
<%= p.label :vimeo_url, :style => "display: inline;" %>
<%= p.text_field :vimeo %>
</div>
<%= p.submit "add post", class: "btn btn-large btn-inverse post-upload" %>
<% end %>
</div>
<% else %>
<p class="make_account">comming soon user adding videos </p>
<% end %>
<div class=" big-box">
	<div class="mainpost-box">

		<div class="mainside-box">
			<h1><%= link_to "Explore Photos", posts_url %> </h1>
			
			<div class="explore-ad">
			
			</div>
			<h2><%= link_to "back to most recent video", videos_url %></h2>
			<div id="tag_cloud">
				<h3>search by Tags</h3>
				<% tag_cloud Video.tag_counts, %w[s m l] do |tag, css_class| %>
				<%= link_to tag.name, tag_video_path(tag.name), class: css_class %>
				<% end %>

			</div>
			<!-- Classic, created 11/29/12 -->
			<div id="wahohaHuDsFT"></div>
			<script type="text/javascript">(function(){function a(){var s=document.createElement("script");s.type="text/javascript";s.async=true;s.src="http://wahoha.com/widget/HuDsFT";var x=document.getElementsByTagName("script")[0];x.parentNode.insertBefore(s,x);}a();})();</script>
			<!-- end -->

			<script src="http://knowd.com/w/864.js?swid=520"></script>
		</div>
	<% @videos.each do |video| %>
<table class=<%=cycle("post-table", "post-table2")%>>
	<CAPTION><h3><%= link_to video.title, video_url(video) %></h3></CAPTION>
<tr>
<td><%= video.vimeo_html %><%= video.youtube_html %></td>
</tr>
<tr>
<td> <b>Link</b> <a href= "http://<%= video.link %> " target = "_blank"><%= video.link %></a> | <b>profile:</b> <%= link_to video.user.name, user_url(video.user) %></td>

</tr>
</div>

</table>
<% end %>

<%= paginate @videos %>

</div>


<%= render "layouts/footer"%>