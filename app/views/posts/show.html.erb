<% provide(:title, @post.title)%>
<div class="mainmain">
<div class="pshow-main">
	<div class="up-ad">
		<script type="text/javascript"><!--
		google_ad_client = "ca-pub-3387068696014466";
		/* curisn bro bottom */
		google_ad_slot = "2013051388";
		google_ad_width = 728;
		google_ad_height = 90;
		//-->
		</script>
		<script type="text/javascript"
		src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
		</script>
	</div>
		
</div>

<div class="main2-show">
	
	<div class="sidead">
		<script type="text/javascript"><!--
		google_ad_client = "ca-pub-3387068696014466";
		/* show-cruisinbro */
		google_ad_slot = "9981668974";
		google_ad_width = 160;
		google_ad_height = 600;
		//-->
		</script>
		<script type="text/javascript"
		src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
		</script>
	</div>
	<div class="next-buttom">
			<ul>
				<li class="next-box"><%= link_to("Previous Pic", @post.next_upload, :class => "")  if @post.next_upload %></li>
				<li class="next-box"><%= link_to("Next Pic", @post.previous_upload,:class => "") if @post.previous_upload %></li>

			</ul>
		</div>		
	<div class="s-main">
	<div class="h2-title">
		<h2 class="h2-show"><%= @post.title %></h2>
	</div>
	<div class="show-pic">
		<%= image_tag(@post.picture.url(:large), :title => @post.title, :alt => @post.title,) %> 
	</div>
	<div class="show-user">
		<h4> Profile: <%= @post.user.name.capitalize %> | link: <a href= "http://<%= @post.link %> " target = "_blank"><%= @post.link %></a></h4>
	</div>
	<div class="show-text">
		<h4>Tags: <%= raw @post.tag_list.map {|t| link_to t, tag_path(t)}.join(', ') %></h4>
		
	</div>
		<span class='st_facebook_vcount' displayText='Facebook'></span>
		<span class='st_stumbleupon_vcount' displayText='StumbleUpon'></span>
		<span class='st_tumblr_vcount' displayText='Tumblr'></span>
		<span class='st_reddit_vcount' displayText='Reddit'></span>
		<span class='st_fark_vcount' displayText='Fark'></span>
		<span class='st_digg_vcount' displayText='Digg'></span>
		<span class='st_twitter_vcount' displayText='Tweet'></span>
		<span class='st_pinterest_vcount' displayText='Pinterest'></span>
	<div class="post-text">
		<h2> Description: </h2>
		<h4><%= @post.text %></h4>
	</div>
	<% if can? :destroy, @post %>
  			<%= link_to "Edit", edit_post_path(@post) %>   
		<% end %>
		<% if can? :destroy, @post %>
    		<%= link_to "Destroy", @post, :method => :delete, :confirm => "Are you sure you want to delete?" %> 
    		<span><strong>Only you can see this</strong></span>
  		<% end %>
	</div>
	

</div>
</div>